{
  "name": "user_service",
  "version": "0.1.0",
  "description": "Trocar is a platform that facilitates the exchange of goods and services between neighboring users.",
  "bin": {
    "user_service": "bin/user_service.js"
  },
  "keywords": [
    "serverless",
    "user-service",
    "clean-code"
  ],
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "migrate:up": "db-migrate up -m src/infrastructure/data/pg/migrations",
    "migrate:down": "db-migrate down  -m src/infrastructure/data/pg/migrations",
    "start:dev": "cdk synth && sam.cmd local start-api -t cdk.out/UserServiceStack.template.json",
    "lint": "eslint src/**/*.ts --max-warnings=0"
  },
  "dependencies": {
    "aws-cdk-lib": "2.121.1",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "constructs": "^10.0.0",
    "dotenv": "^16.4.4",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.133",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "20.10.8",
    "@types/pg": "^8.11.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "aws-cdk": "2.121.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3"
  }
}
